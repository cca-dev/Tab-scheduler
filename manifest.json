// manifest.json
{
    "manifest_version": 2,
    "name": "Kiosk Tab Scheduler",
    "version": "1.0",
    "permissions": [
      "tabs",
      "alarms",
      "storage"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html"
    }
  }